        <vm:MainWindowVM/>
    </Window.DataContext>
    <Grid>
        
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2.5*"/>
                </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
